/*-----------------------------------------TARJETA DE LOGOUT---------------------------------------------*/

.tarjeta {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(50, 50, 50, 0.7);
    /* Fondo semi-transparente para superponer la página */
    justify-content: center;
    align-items: center;
}

/* Estilo de la tarjeta cuando está abierta */
.tarjeta.abierta {
    display: flex;
}

#tarjeta-sesion {
