@{
    ViewBag.Title = "Evaluate Sentiment";
}

<h2>Evaluate Sentiment</h2>

<form asp-action="Evaluate" method="post">
    <div class="form-group">
        <label for="inputText">Enter Text:</label>
        <textarea class="form-control" id="inputText" name="inputText" rows="4" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Evaluate</button>
</form>

@if (ViewBag.Result != null)
{
        <h3 class="mt-4">Result: @ViewBag.Result</h3>
}
